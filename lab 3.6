#include <iostream>

void larger_of(double& num1, double& num2) {
    if (num1 < num2) {
        num1 = num2;
    } else {
        num2 = num1;
    }
}

int main() {
    double num1, num2;

    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    larger_of(num1, num2);

    std::cout << "After replacing with the larger value:\n";
    std::cout << "First number: " << num1 << std::endl;
    std::cout << "Second number: " << num2 << std::endl;

    return 0;
}
