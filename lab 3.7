#include <iostream>

void move_values(double* num1, double* num2, double* num3) {
    if (*num1 > *num2) {
        std::swap(*num1, *num2);
    }
    if (*num2 > *num3) {
        std::swap(*num2, *num3);
    }
    if (*num1 > *num2) {
        std::swap(*num1, *num2);
    }
}

int main() {
    double num1, num2, num3;

    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    std::cout << "Enter the third number: ";
    std::cin >> num3;

    move_values(&num1, &num2, &num3);

    std::cout << "After rearranging in ascending order:\n";
    std::cout << "First number: " << num1 << std::endl;
    std::cout << "Second number: " << num2 << std::endl;
    std::cout << "Third number: " << num3 << std::endl;

    return 0;
}
