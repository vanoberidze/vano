#include <iostream>

int main() {
    const int SIZE = 26;
    char letters[SIZE];

    // Storing lowercase letters in the array
    for (int i = 0; i < SIZE; i++) {
        letters[i] = 'a' + i;
    }

    // Displaying the array contents
    std::cout << "Array contents: ";
    for (int i = 0; i < SIZE; i++) {
        std::cout << letters[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
